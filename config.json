{
    "Identity"  : "test user \u003ctest@test.com\u003e",
    "Arch"      : "x86_64",
    "OS"        : "linux",
    "Root"      : "/",
    "PlansRepo" : "http://jupiter/plans",
    "Cache"     : "$HOME/via/cache",
    "DB"        : "usr/local/via/db",
    "Plans"     : "$HOME/via/plans",
    "Repo"      : "$HOME/via/repo",
    "Flags"     : [
                "--config-cache",
                "--disable-acl",
                "--disable-multilib",
                "--disable-nls",
                "--prefix=$PREFIX",
                "--sysconfdir=$PREFIX/etc",
                "--without-manpages"
    ],          
    "Env"       : {
                "CFLAGS"    : "-pipe -O2 -march=x86-64 -mtune=generic -Wl,--dynamic-linker,/usr/local/via/lib/ld-linux-x86-64.so.2",
                "CXXFLAGS"  : "-pipe -O2 -march=x86-64 -mtune=generic -Wl,--dynamic-linker,/usr/local/via/lib/ld-linux-x86-64.so.2",
                "LDFLAGS"   : "-Wl,--as-needed",
                "MAKEFLAGS" : "-j3",
                "PREFIX"    : "/usr/local/via",
                "TARGET"    : "x86_64-unknown-linux-gnu"
    },          
    "Remove"    : [
                "usr/local/via/share/info/dir"
    ]
}
