{
    "Branch"    : "extras",
    "Identity"  : "test user \u003ctest@test.com\u003e",
    "Arch"      : "x86_64",
    "OS"        : "linux",
    "Root"      : "/",
    "PlansRepo" : "http://github.com/mrosset/plans",
    "Linker"    : "/tmp/via/lib/linker",
    "Cache"     : "$HOME/.cache/via",
    "DB"        : "/via/db",
    "Plans"     : "$GOPATH/src/github.com/mrosset/via/plans",
    "Repo"      : "$GOPATH/src/github.com/mrosset/via/publish",
    "Binary"    : "https://bitbucket.org/strings/publish/raw/{{.Branch}}/repo",
    "Prefix"    : "/via",
    "Flags"     : [
                "--build=x86_64-via-linux-gnu",
                "--config-cache",
                "--disable-man",
                "--disable-multilib",
                "--disable-nls",
                "--disable-static",
                "--disable-werror",
                "--enable-shared",
                "--host=x86_64-via-linux-gnu",
                "--libexec={{.Prefix}}/lib",
                "--prefix=$PREFIX",
                "--sysconfdir={{.Prefix}}/etc",
                "--without-manpages"
    ],
    "Env" : {
          "CFLAGS"              : "-pipe -O2 -mtune=generic",
          "CHOST"               : "x86_64-via-linux-gnu",
          "CPPFLAGS"            : "$CFLAGS -P",
          "CXXFLAGS"            : "$CFLAGS",
          "LDFLAGS"             : "-Wl,-rpath -Wl,$PREFIX/lib -Wl,--as-needed -Wl,--dynamic-linker,$PREFIX/lib/ld-linux-x86-64.so.2",
          "LIBRARY_PATH"        : "$PREFIX/lib",
          "MAKEFLAGS"           : "-sw -j16",
          "OCPLUS_INCLUDE_PATH" : "$PREFIX/include",
          "OC_INCLUDE_PATH"     : "$PREFIX/include",
          "PATH"                : "$GOPATH/bin:$PREFIX/lib/ccache:$HOME/bin:{{.Root}}/$PREFIX/bin",
          "PKG_CONFIG_PATH"     : "$PREFIX/lib/pkgconfig",
          "PREFIX"              : "{{.Prefix}}"
    },
    "Remove" : [
             "$PREFIX/share/doc",
             "$PREFIX/share/info",
             "$PREFIX/share/man"
    ],
    "PostInstall" : null
}
