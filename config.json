{
    "Branch"    : "ppc64le-via-linux-gnu",
    "Identity"  : "test user \u003ctest@test.com\u003e",
    "Arch"      : "ppc64le",
    "OS"        : "linux",
    "Root"      : "/",
    "PlansRepo" : "http://github.com/mrosset/plans",
    "Threads"   : 8,
    "IpfsApi"   : "localhost:5001",
    "IpfsApi"   : "127.0.0.1:5001",
    "Cache"     : "$HOME/.cache/via",
    "DB"        : "/opt/via/db",
    "Plans"     : "$GOPATH/src/github.com/mrosset/via/plans",
    "Repo"      : "$GOPATH/src/github.com/mrosset/via/publish/repo",
    "Binary"    : "http://localhost:8080/ipfs/",
    "Prefix"    : "/opt/via",
    "Flags"     : [
                "--build={{.Arch}}-via-{{.OS}}-gnu",
                "--config-cache",
                "--disable-multilib",
                "--disable-nls",
                "--enable-shared",
                "--host={{.Arch}}-via-{{.OS}}-gnu",
                "--libexec={{.Prefix}}/lib",
                "--prefix=$PREFIX",
                "--sbindir={{.Prefix}}/bin",
                "--sysconfdir={{.Prefix}}/etc",
                "-q"
    ],
    "Env" : {
          "CFLAGS"          : "-pipe -O2",
          "CONFIG_SITE"     : "",
          "EMACS"           : "",
          "LDFLAGS"         : "-Wl,-rpath -Wl,$PREFIX/lib -Wl,--as-needed -Wl,--dynamic-linker,$PREFIX/lib/ld64.so.2",
          "LIBRARY_PATH"    : "$PREFIX/lib",
          "MAKEFLAGS"       : "-sw -j128",
          "PATH"            : "$GOPATH/bin:$PREFIX/lib/ccache:$PREFIX/bin",
          "PKG_CONFIG_PATH" : "$PREFIX/lib/pkgconfig",
          "PREFIX"          : "{{.Prefix}}"
    },
    "Remove" : [
             "$PREFIX/share/doc",
             "$PREFIX/share/info",
             "$PREFIX/share/man"
    ],
    "PostInstall" : null
}
